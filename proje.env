# Veritabanı Yapılandırması
DB_HOST=localhost
DB_NAME=haber_db
DB_USER=root
DB_PASS=

# Uygulama Yapılandırması
APP_NAME="Haber Sitesi"
APP_URL="http://localhost/haber"
APP_ENV=development
APP_DEBUG=true
APP_VERSION=1.0.0

# Mail Yapılandırması
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@haber.com
MAIL_FROM_NAME="Haber Sitesi"

# Güvenlik Yapılandırması
SESSION_LIFETIME=120
CSRF_TOKEN_LIFETIME=3600
MAX_LOGIN_ATTEMPTS=5
LOGIN_TIMEOUT=1800
HASH_COST=12

# API Yapılandırması
API_KEY=your-api-key
API_SECRET=your-api-secret
API_RATE_LIMIT=100

# Cache Yapılandırması
CACHE_ENABLED=true
CACHE_PREFIX=cache_
CACHE_EXPIRY=3600

# Dosya Yükleme Limitleri
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["image/jpeg","image/png","image/gif","video/mp4","application/pdf"]

# Sosyal Medya API Anahtarları
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# SMS Servisi Yapılandırması
SMS_PROVIDER=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_FROM_NUMBER=your-twilio-phone-number

# Push Bildirim Yapılandırması
FIREBASE_CREDENTIALS=path/to/firebase-credentials.json
FIREBASE_DATABASE_URL=your-firebase-database-url

# Ödeme Sistemi Yapılandırması
PAYMENT_PROVIDER=iyzico
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key

# CDN Yapılandırması
CDN_URL=https://cdn.habersitesi.com
CDN_ENABLED=false

# Log Yapılandırması
LOG_CHANNEL=file
LOG_LEVEL=debug
LOG_PATH=logs/app.log

# Zaman Dilimi
TIMEZONE=Europe/Istanbul

# Dil Yapılandırması
DEFAULT_LOCALE=tr
FALLBACK_LOCALE=en
AVAILABLE_LOCALES=["tr","en"]

# Önbellek Yapılandırması
CACHE_DRIVER=file
CACHE_PATH=cache

# Dosya Depolama Yapılandırması
STORAGE_DRIVER=local
STORAGE_PATH=uploads
MAX_UPLOAD_SIZE=10485760

# Güvenlik Başlıkları
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; img-src 'self' data: https:; font-src 'self' https://cdn.jsdelivr.net;"

# İstatistik Yapılandırması
ANALYTICS_ENABLED=true
ANALYTICS_PROVIDER=google
GOOGLE_ANALYTICS_ID=your-ga-id

# Arama Yapılandırması
SEARCH_DRIVER=mysql
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# Yedekleme Yapılandırması
BACKUP_ENABLED=true
BACKUP_PATH=backups
BACKUP_RETENTION_DAYS=30

# Bildirim Yapılandırması
NOTIFICATION_DRIVER=database
PUSH_NOTIFICATIONS_ENABLED=false
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=false
